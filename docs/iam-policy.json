{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ListBucketForPrefix",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::example-backup-bucket",
      "Condition": {
        "StringLike": {
          "s3:prefix": "device-01/*"
        }
      }
    },
    {
      "Sid": "ObjectAccessForPrefix",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::example-backup-bucket/device-01/*"
    }
  ]
}
